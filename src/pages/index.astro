---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Boys Middle School - SF Bay Area">
	<Header />
	<main>
		<section class="hero">
			<div class="hero-overlay"></div>
			<div class="hero-content">
				<h1>Boys Middle School</h1>
				<p class="hero-subtitle">A unique middle school (grade 5–8) program for boys</p>
				<p class="hero-location">SF Bay Area</p>
			</div>
		</section>

		<section class="mission">
			<div class="container">
				<h2>Our Mission</h2>
				<div class="mission-content">
					<p class="mission-text">Our mission is to help boys grow into confident young men by building a school they're excited to attend—one that channels their energy, curiosity, and competitiveness into mastery, character, and earned achievement.</p>
				</div>
			</div>
		</section>

		<section class="intro">
			<div class="container">
				<div class="intro-content">
					<p class="intro-text">The Boys Middle School (BMS) is a proposed 5th–8th grade boys' school in the San Francisco Bay Area.</p>
					<p class="intro-text">We believe that some boys are not well served by existing coeducational public and private schools.</p>
					<p class="intro-text">Our school provides a liberal arts foundation with mastery-based learning, problem-driven STEM, and discussion-centered humanities—uniting academic rigor with a shared commitment to intellectual and civic life.</p>
				</div>
			</div>
		</section>

		<section class="visual-section visual-section-why">
			<div class="container">
				<div class="visual-content">
					<div class="visual-image">
						<img src="/bms-boys-soccer-winning-celebration.jpg" alt="Why a Boys School" />
					</div>
					<div class="visual-text">
						<h2>Why a Boys School</h2>
						<p>Understanding why some boys need a different school environment to thrive.</p>
						<a href="/why-a-boys-school" class="btn btn-secondary">Learn More →</a>
					</div>
				</div>
			</div>
		</section>

		<section class="visual-section visual-section-learning">
			<div class="container">
				<div class="visual-content reverse">
					<div class="visual-image">
						<img src="/bms-boys-in-lab-focused.jpg" alt="Learning" />
					</div>
					<div class="visual-text">
						<h2>Learning</h2>
						<p>Mastery-based learning, problem-driven STEM, and discussion-centered humanities.</p>
						<a href="/learning" class="btn btn-secondary">Learn More →</a>
					</div>
				</div>
			</div>
		</section>

		<section class="visual-section visual-section-personalization">
			<div class="container">
				<div class="visual-content">
					<div class="visual-image">
						<img src="/bms-family-personalization.jpg" alt="Family-Driven Personalization" />
					</div>
					<div class="visual-text">
						<h2>Family-Driven Personalization</h2>
						<p>How we give families flexibility in their child's education.</p>
						<a href="/family-driven-personalization" class="btn btn-secondary">Learn More →</a>
					</div>
				</div>
			</div>
		</section>

		<section class="visual-section visual-section-environment">
			<div class="container">
				<div class="visual-content reverse">
					<div class="visual-image">
						<img src="/school-indoor-setting.jpeg" alt="School Environment" />
					</div>
					<div class="visual-text">
						<h2>School Environment</h2>
						<p>What to expect from phones, tech, physical space, and parent involvement.</p>
						<a href="/school-environment" class="btn btn-secondary">Learn More →</a>
					</div>
				</div>
			</div>
		</section>

		<section class="cta-section">
			<div class="container">
				<div class="cta-content">
					<h2>Interested?</h2>
					<p>Please fill out our short form and we will get back to you.</p>
					<a href="/interested" class="btn btn-primary btn-large">Express Your Interest</a>
					<div class="cta-links">
						<a href="/about">Meet Our Founders</a>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	main {
		min-height: calc(100vh - 200px);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.hero {
		position: relative;
		background-image: url('/school-indoor-setting.jpeg');
		background-size: cover;
		background-position: center;
		color: white;
		padding: 5rem 2rem;
		text-align: center;
		min-height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(10, 10, 11, 0.7) 0%, rgba(19, 19, 20, 0.85) 100%);
	}

	:global(html.light) .hero-overlay {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(26, 54, 93, 0.25) 100%);
	}

	.hero-content {
		position: relative;
		z-index: 1;
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		color: white;
		font-size: 3.5rem;
		margin-bottom: 1rem;
		line-height: 1.1;
		font-weight: 700;
	}

	:global(html.light) .hero h1 {
		color: var(--color-primary);
	}

	.hero-subtitle {
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
		opacity: 0.95;
		line-height: 1.4;
	}

	:global(html.light) .hero-subtitle,
	:global(html.light) .hero-location {
		color: var(--color-text);
	}

	.hero-location {
		font-size: 1.25rem;
		opacity: 0.9;
	}

	.mission {
		padding: 3.5rem 0;
		background: var(--color-bg-elevated);
		border-bottom: 1px solid var(--color-border);
	}

	.mission h2 {
		text-align: center;
		color: var(--color-text);
		margin-bottom: 2rem;
		font-size: 2rem;
	}

	.mission-content {
		max-width: 900px;
		margin: 0 auto;
	}

	.mission-text {
		font-size: 1.25rem;
		line-height: 1.8;
		color: var(--color-text);
		text-align: center;
		font-weight: 500;
	}

	.intro {
		padding: 3rem 0;
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border);
	}

	.intro-content {
		max-width: 900px;
		margin: 0 auto;
	}

	.intro-text {
		font-size: 1.125rem;
		line-height: 1.8;
		color: var(--color-text-muted);
		margin-bottom: 1.5rem;
	}

	.intro-text:last-child {
		margin-bottom: 0;
	}

	.visual-section {
		padding: 5rem 0;
		background: var(--color-bg);
	}

	.visual-section:nth-child(even) {
		background: var(--color-bg-light);
	}

	.visual-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
	}

	.visual-content.reverse {
		direction: rtl;
	}

	.visual-content.reverse > * {
		direction: ltr;
	}

	.visual-image {
		border-radius: 12px;
		overflow: hidden;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
	}

	.visual-image img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		display: block;
	}

	.visual-text h2 {
		color: var(--color-text);
		margin-bottom: 1.5rem;
		font-size: 2rem;
	}

	.visual-text p {
		color: var(--color-text-muted);
		font-size: 1.125rem;
		line-height: 1.8;
		margin-bottom: 1.5rem;
	}

	.btn {
		display: inline-block;
		padding: 0.875rem 2rem;
		border-radius: 6px;
		font-weight: 600;
		transition: all 0.3s ease;
		border: 1px solid transparent;
		cursor: pointer;
		text-align: center;
		font-size: 0.95rem;
	}

	.btn-primary {
		background: var(--color-accent);
		color: var(--color-text-dark);
		border-color: var(--color-accent);
	}

	.btn-primary:hover {
		background: var(--color-accent-hover);
		border-color: var(--color-accent-hover);
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(217, 119, 87, 0.25);
	}

	.btn-secondary {
		background: transparent;
		color: var(--color-accent);
		border-color: var(--color-accent);
	}

	.btn-secondary:hover {
		background: var(--color-accent);
		color: var(--color-text-dark);
		transform: translateY(-2px);
	}

	.btn-large {
		padding: 1rem 2.5rem;
		font-size: 1.125rem;
	}

	.cta-section {
		background: var(--color-bg-elevated);
		border-top: 1px solid var(--color-border);
		color: var(--color-text);
		padding: 4rem 0;
		text-align: center;
	}

	.cta-content h2 {
		color: var(--color-text);
		margin-bottom: 1rem;
	}

	.cta-content p {
		font-size: 1.125rem;
		margin-bottom: 2rem;
		color: var(--color-text-muted);
	}

	.cta-links {
		margin-top: 1.5rem;
	}

	.cta-links a {
		color: var(--color-accent);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.cta-links a:hover {
		color: var(--color-accent-hover);
		text-decoration: underline;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 1.5rem;
			min-height: 350px;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1.25rem;
		}

		.hero-location {
			font-size: 1.125rem;
		}

		.mission {
			padding: 2.5rem 0;
		}

		.mission h2 {
			font-size: 1.75rem;
			margin-bottom: 1.5rem;
		}

		.mission-text {
			font-size: 1.125rem;
		}

		.intro {
			padding: 2rem 0;
		}

		.intro-text {
			font-size: 1rem;
		}

		.visual-section {
			padding: 3rem 0;
		}

		.visual-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.visual-content.reverse {
			direction: ltr;
		}

		.visual-image img {
			height: 300px;
		}

		.visual-text h2 {
			font-size: 1.75rem;
		}

		.visual-text p {
			font-size: 1rem;
		}

		.cta-section {
			padding: 2rem 0;
		}

		.container {
			padding: 0 1rem;
		}
	}
</style>
