---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Express Your Interest | Boys Middle School">
	<Header />
	<main>
		<section class="page-header">
			<div class="container">
				<h1>Interested?</h1>
				<p class="page-subtitle">Please fill out the form.</p>
			</div>
		</section>

		<section class="interest-form">
			<div class="container">
				<div class="form-container">
					<iframe src="https://docs.google.com/forms/d/e/1FAIpQLSccRZR65sApzz6fE0BnNhIqcGD7NguUrStx4aw5Wf7tsD6lzw/viewform?embedded=true" width="640" height="336" frameborder="0" marginheight="0" marginwidth="0">Loading…</iframe>
						Loading…
					</iframe>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.page-header {
		background: var(--color-bg-elevated);
		border-bottom: 1px solid var(--color-border);
		color: var(--color-text);
		padding: 4rem 2rem;
		text-align: center;
	}

	.page-header h1 {
		color: var(--color-text);
		margin-bottom: 1rem;
	}

	.page-subtitle {
		font-size: 1.125rem;
		color: var(--color-text-muted);
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.interest-form {
		padding: 5rem 0;
		background: var(--color-bg);
	}

	.form-container {
		background: var(--color-bg-elevated);
		border-radius: 12px;
		border: 1px solid var(--color-border);
		padding: 2rem;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.google-form {
		border: none;
		display: block;
		max-width: 100%;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 1.5rem;
		}

		.interest-form {
			padding: 3rem 0;
		}

		.container {
			padding: 0 1rem;
		}

		.form-container {
			padding: 1rem;
		}

		.google-form {
			width: 100%;
			height: auto;
		}
	}
</style>

