---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Express Your Interest | Boys Middle School">
	<Header />
	<main>
		<section class="page-header">
			<div class="container">
				<h1>Express Your Interest</h1>
				<p class="page-subtitle">Fill out this form and we will get back to you</p>
			</div>
		</section>

		<section class="interest-form">
			<div class="container">
				<div class="form-container">
					<iframe
						src="https://docs.google.com/forms/d/e/1FAIpQLSft6vK9gSm2zlCxRIKBCtixP78GCBPaNKRKz8v0jia8j4X_kQ/viewform?embedded=true"
						width="640"
						height="597"
						frameborder="0"
						marginheight="0"
						marginwidth="0"
						class="google-form"
					>
						Loadingâ€¦
					</iframe>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.page-header {
		background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);
		color: white;
		padding: 4rem 2rem;
		text-align: center;
	}

	.page-header h1 {
		color: white;
		margin-bottom: 1rem;
	}

	.page-subtitle {
		font-size: 1.125rem;
		opacity: 0.95;
	}

	.container {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.interest-form {
		padding: 5rem 0;
		background: var(--color-bg-light);
	}

	.form-container {
		background: white;
		border-radius: 12px;
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
		padding: 2rem;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.google-form {
		border: none;
		display: block;
		max-width: 100%;
	}

	@media (max-width: 768px) {
		.page-header {
			padding: 3rem 1.5rem;
		}

		.interest-form {
			padding: 3rem 0;
		}

		.container {
			padding: 0 1rem;
		}

		.form-container {
			padding: 1rem;
		}

		.google-form {
			width: 100%;
			height: auto;
		}
	}
</style>

