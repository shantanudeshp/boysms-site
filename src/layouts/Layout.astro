---
interface Props {
	title: string;
	description?: string;
}

const { title, description = "Boys Middle School - Empowering young men through exceptional education" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=AW-17827465511"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'AW-17827465511');
		</script>

		<script is:inline>
			// Prevent flash of unstyled content
			const theme = localStorage.getItem('theme') || 'light';
			if (theme === 'light') {
				document.documentElement.classList.add('light');
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		/* Dark mode (default) */
		--color-primary: #131314;
		--color-primary-light: #2a2a2c;
		--color-accent: #d97757;
		--color-accent-hover: #c25d3f;
		--color-text: #faf9f0;
		--color-text-dark: #1a1a1b;
		--color-text-muted: #a8a8a8;
		--color-bg: #0a0a0b;
		--color-bg-light: #1a1a1c;
		--color-bg-elevated: #252527;
		--color-border: #2a2a2c;
		--font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
		--font-serif: Georgia, Cambria, 'Times New Roman', Times, serif;
	}

	html.light {
		/* Light mode - Bright and modern */
		--color-primary: #1a365d;
		--color-primary-light: #2d4a6f;
		--color-accent: #e67e50;
		--color-accent-hover: #d46d40;
		--color-text: #1a202c;
		--color-text-dark: #ffffff;
		--color-text-muted: #4a5568;
		--color-bg: #ffffff;
		--color-bg-light: #f7fafc;
		--color-bg-elevated: #ffffff;
		--color-border: #e2e8f0;
	}

	html {
		font-family: var(--font-sans);
		scroll-behavior: smooth;
		scroll-padding-top: 100px;
	}

	body {
		color: var(--color-text);
		background: var(--color-bg);
		line-height: 1.7;
		font-weight: 400;
		font-size: 18px;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 600;
		line-height: 1.3;
		color: var(--color-text);
		letter-spacing: -0.01em;
	}

	h1 {
		font-size: 3.25rem;
	}

	h2 {
		font-size: 2.5rem;
	}

	h3 {
		font-size: 1.875rem;
	}

	a {
		color: var(--color-accent);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	a:hover {
		color: var(--color-accent-hover);
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 2rem;
		}
		h2 {
			font-size: 1.75rem;
		}
		h3 {
			font-size: 1.5rem;
		}
	}
</style>

